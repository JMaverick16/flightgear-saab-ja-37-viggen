<?xml version="1.0"?>
<PropertyList>

	<path>mi.ac</path>

	<animation>
	    <type>material</type>
	    <object-name>warning_light</object-name>
	    <emission>
	        <red>1.0</red>
	        <green>0.0</green>
	        <blue>0.0</blue>
	        <factor-prop>/instrumentation/terrain-warning-light</factor-prop>
	    </emission>
  	</animation>

  	<animation>
        <type>textranslate</type>
        <object-name>warning_light</object-name>
        <property>/instrumentation/terrain-warning-light</property>
        <factor>0.05</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

  	<animation>
	    <type>material</type>
	    <object-name>screen</object-name>
	    <emission>
	        <red>1.0</red>
	        <green>1.0</green>
	        <blue>1.0</blue>
	        <factor-prop>ja37/avionics/brightness-mi</factor-prop>
	    </emission>
  	</animation>

  	<animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <visible>true</visible>
        <action>
            <name>brightness</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.brightness();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>knob</tooltip-id>
                <label>MI: Brightness</label>
            </binding>
        </hovered>
    </animation>

  	<animation>
        <type>pick</type>
        <object-name>button_a</object-name>
        <visible>true</visible>
        <action>
            <name>increase zoom</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.zoomOut();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>a</tooltip-id>
                <label>TI: Zoom out</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_b</object-name>
        <visible>true</visible>
        <action>
            <name>decrease zoom</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.zoomIn();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>b</tooltip-id>
                <label>TI: Zoom in</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_pi</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>jl</tooltip-id>
                <label>Fighter link</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_pek</object-name>
        <visible>true</visible>
        <action>
            <name>cursor</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.cursor();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>pek</tooltip-id>
                <label>MI/TI: Cursor</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	    <type>material</type>
	    <object-name>button_pek</object-name>
	    <emission>
	        <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
	        <factor-prop>/ja37/avionics/cursor-on</factor-prop>
	    </emission>
  	</animation>

    <animation>
        <type>pick</type>
        <object-name>button_p3</object-name>
        <visible>true</visible>
        <action>
            <name>help MI</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>MI.pressP3();</script>
            </binding>
            <mod-up>
	            <binding>
	                <command>nasal</command>
	                <script>MI.releaseP3();</script>
	            </binding>
	        </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>p3</tooltip-id>
                <label>MI help</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>indicator_tls</object-name>
        <visible>true</visible>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>tls</tooltip-id>
                <label>TILS</label>
            </binding>
        </hovered>
    </animation>

    <animation>
	    <type>material</type>
	    <object-name>indicator_tls</object-name>
	    <emission>
	        <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
	        <factor-prop>/ja37/hud/TILS-on</factor-prop>
	    </emission>
  	</animation>

  	<animation>
	    <type>material</type>
	    <object-name>button_reg</object-name>
	    <emission>
	        <red-prop>instrumentation/instrumentation-light/r</red-prop> 
   			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
   			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
	        <factor-prop>/ja37/avionics/record-on</factor-prop>
	    </emission>
  	</animation>

  	<animation>
        <type>pick</type>
        <object-name>button_reg</object-name>
        <visible>true</visible>
        <!--<action>
            <name>record on/off</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>sim/replay/disable</property>
            </binding>
        </action>-->
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Reg</tooltip-id>
                <label>Recording Flight Tape</label>
            </binding>
        </hovered>
    </animation>  	

</PropertyList>  