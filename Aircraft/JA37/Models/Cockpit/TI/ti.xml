  	<!--


							SCREEN


  	-->

  	<animation>
	    <type>material</type>
	    <object-name>ti_screen</object-name>
	    <emission>
	        <red>1.0</red>
	        <green>1.0</green>
	        <blue>1.0</blue>
	        <factor-prop>ja37/avionics/brightness-ti</factor-prop>
	    </emission>
  	</animation>

  	<!--


							flipper buttons


  	-->

  	<animation>
        <type>pick</type>
        <object-name>button_brightness</object-name>
        <visible>true</visible>
        <action>
            <name>brightness</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.brightness();</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>flipperB</tooltip-id>
                <label>TI: Brightness</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button_contrast</object-name>
        <visible>true</visible>
        <action>
            <name>position</name>
            <button>0</button>
            <repeatable>true</repeatable>
            <binding>
                <command>nasal</command>
                <script>TI.ti.ownPosition += 0.01;
                        if (TI.ti.ownPosition > 1) {
                            TI.ti.ownPosition = 0;
                        }
                    </script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>flipperC</tooltip-id>
                <label>TI: Position</label>
            </binding>
        </hovered>
    </animation>

    <!--


							INDICATORS


  	-->

    <animation>
        <type>material</type>
        <object-name>light_green_right</object-name>
        <object-name>light_green_left</object-name>
        <condition>
