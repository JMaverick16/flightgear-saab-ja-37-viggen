<?xml version="1.0"?>

<PropertyList>

    <path>gearsBox.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>handleGears</object-name>
        <object-name>handleBrake</object-name>
        <object-name>stickThrottle</object-name>
        <object-name>box</object-name>
    </effect>

    <!--<effect>
        <inherits-from>Effects/model-combined-deferred</inherits-from>
        <object-name>box</object-name>
    </effect>-->

    <animation>
        <type>rotate</type>
        <object-name>handleGears</object-name>
        <property>fdm/jsbsim/gear/gear-lever-norm</property>
        <factor>-20</factor>
        <offset-deg>20</offset-deg>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.13614 </y-m>
            <z-m>  0.08639 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 1.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>handleBrake</object-name>
        <property>/instrumentation/at-indicator</property>
        <factor>-10</factor>
        <offset-deg>10</offset-deg>
        <center>
            <x-m>  0.01466 </x-m>
            <y-m>  0.00052 </y-m>
            <z-m> 0.08741 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 1.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handleGears</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/gear/gear-down</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>handle-gears</tooltip-id>
                <label>Gears lever%s</label>
                <property>fdm/jsbsim/gear/gear-lever-lock</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = [' ', ' (LOCKED)'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handleBrake</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>handle-brake</tooltip-id>
                <label>Auto-throttle handle (down), throttle-brake (up)</label>
            </binding>
        </hovered>
        <action>
            <name>A/T engage</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                    auto.apContSpeed();
                    ja37.click();
                </script>
            </binding>
        </action>
    </animation>

</PropertyList>
