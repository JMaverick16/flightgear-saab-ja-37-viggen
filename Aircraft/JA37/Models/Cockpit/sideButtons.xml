<?xml version="1.0"?>

<PropertyList>

    <path>sideButtons.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from><!--<inherits-from>Aircraft/JA37/Models/Effects/ja37-metal</inherits-from>-->
        <object-name>mountLeft</object-name>
        <object-name>mountLeftMinor</object-name>
        <object-name>mountRight</object-name>
        <object-name>mountRightMinor</object-name>
        <object-name>Switch</object-name>
        <object-name>button</object-name>
    </effect>

    <animation>
        <type>knob</type>
        <object-name>Switch</object-name>
        <property>ja37/light/flood-bt</property>
        <factor>-60</factor>
        <offset-deg>30</offset-deg>
        <axis>   
           <x1-m> -3.809045 </x1-m>
           <y1-m> 0.313789 </y1-m>
           <z1-m> 0.398382 </z1-m>
           <x2-m> -3.809045 </x2-m>
           <y2-m> 0.323789 </y2-m>
           <z2-m> 0.398382 </z2-m>
        </axis>     
        <action>
            <binding>
                <command>property-adjust</command>
                <property>ja37/light/flood-bt</property>
                <min>0</min>
                <max>1</max>                
                <wrap>false</wrap>
           </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Switch</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fl</tooltip-id>
                <label>Flood light</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/navigation/opt-fix</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/navigation/opt-fix</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>of</tooltip-id>
                <label>Visual INS fix</label>
            </binding>
        </hovered>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>button</object-name>
       <property>ja37/navigation/opt-fix</property>
       <factor>0.0025</factor>
       <offset-m>0</offset-m>
       <axis>   
           <x1-m> -3.805184 </x1-m>
           <y1-m> -0.323775 </y1-m>
           <z1-m> 0.4003 </z1-m>
           <x2-m> -3.812896 </x2-m>
           <y2-m> -0.323775 </y2-m>
           <z2-m> 0.398174 </z2-m>
        </axis>
    </animation>

</PropertyList>
