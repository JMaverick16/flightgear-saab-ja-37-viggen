<?xml version="1.0"?>

<PropertyList>
  <path>Models/Effects/procedural_light.ac</path>

  <effect>
    <inherits-from>Aircraft/JA37/Models/Effects/proc-als-lights/taxi-light</inherits-from>
    <object-name>procedural_light</object-name>
    <parameters>
      
    </parameters>
  </effect>

  <nopreview/>

  <animation>
    <type>noshadow</type>
    <object-name>procedural_light</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>procedural_light</object-name>
    <condition>
      <or>
        <property>sim/multiplay/generic/bool[1]</property> <!-- ja37/effect/taxi-light  -->
        <!-- backward compatibility -->
        <greater-than>
          <property>sim/multiplay/generic/float[4]</property> <!-- ja37/effect/landing-light  -->
          <value>0.8</value>
        </greater-than>
      </or>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>procedural_light</object-name>
    <interpolation>
      <entry><ind>0</ind><dep>1.0</dep></entry>
      <entry><ind>2000</ind><dep>8.0</dep></entry>
    </interpolation>
  </animation>
</PropertyList>
