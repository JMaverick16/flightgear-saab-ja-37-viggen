<?xml version="1.0"?>

<PropertyList>

 <path>strobe.ac</path>

 <animation>
  <type>noshadow</type>
  <object-name>strobeGlare</object-name>
 </animation>

  <!--<effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>strobeGlare</object-name>
  </effect>-->

 <animation>
  <type>select</type>
  <object-name>strobeGlare</object-name>
  <condition>
   <property>sim/multiplay/generic/int[5]</property><!-- sim/model/lighting/strobe/state -->
  </condition>
 </animation>

 <animation>
  <type>billboard</type>
  <object-name>strobeGlare</object-name>
 </animation>

 <animation>
  <type>dist-scale</type>
  <object-name>strobeGlare</object-name>
  <interpolation>
   <entry><ind>0</ind><dep>1.0</dep></entry>
   <entry><ind>5000</ind><dep>50.0</dep></entry>
  </interpolation>
 </animation>

 <!--<animation>
  <type>material</type>
  <object-name>strobeGlare</object-name>
  <threshold>0.001</threshold>
 </animation>-->

 <animation>
  <type>scale</type>
  <object-name>strobeGlare</object-name>
  <property>/rendering/scene/diffuse/red</property>
  <!-- scale = factor*property+offset -->
  <x-min>-30.0</x-min>
  <y-min>-30.0</y-min>
  <z-min>-30.0</z-min>
  <x-factor>30</x-factor>
  <y-factor>30</y-factor>
  <z-factor>30</z-factor>
  <x-offset>-30</x-offset>
  <y-offset>-30</y-offset>
  <z-offset>-30</z-offset>
 </animation>
</PropertyList>
