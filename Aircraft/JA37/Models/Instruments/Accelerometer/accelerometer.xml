<?xml version="1.0"?>

<PropertyList>
    <path>accelerometer-specific.ac</path>
    <!-- Additional shared models -->
    <model><path>../Common/gauge-standard.ac</path></model>
    <model><path>../Common/needle-standard.ac</path></model>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
        <object-name>buttonGMax</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>dial</object-name>
        <object-name>needle</object-name>
        <object-name>needleGMax</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <object-name>needle</object-name>
        <object-name>needleGMax</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>gauge-acc</texture-prop>
        <texture>accelerometer.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>accelerometer</tooltip-id>
                <label>Pulling %2.1fG</label>
                <property>ja37/accelerations/pilot-G</property>
            </binding>
        </hovered>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>buttonGMax</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>ja37.resetMaxG();ja37.click();</script>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/maxG</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/avionics/maxG</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>accelerometerMax</tooltip-id>
                <label>Reset max G</label>
            </binding>
        </hovered>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>buttonGMax</object-name>
        <property>ja37/avionics/maxG</property>
        <factor>-0.004</factor>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>ja37/accelerations/pilot-G-lag</property>
        <interpolation>
            <entry>
                <ind>-2</ind>
                <dep>-60</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>270</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>rotate</type>
        <object-name>needleGMax</object-name>
        <condition>
            <property>ja37/elec/dc-bus-main-bool</property>
        </condition>
        <property>ja37/accelerations/pilot-G-max</property>
        <interpolation>
            <entry>
                <ind>-2</ind>
                <dep>-60</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>270</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
</PropertyList>
