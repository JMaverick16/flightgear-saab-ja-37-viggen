<?xml version="1.0"?>



<PropertyList>
    <path>altimeter-metric.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>bkg</object-name>
        <object-name>knob</object-name>
        <object-name>mount</object-name>
    </effect>
    
    <animation>
        <type>select</type>
        <object-name>off</object-name>
        <condition>
            <not>
                <property>ja37/elec/ac-bus-main-bool</property>
            </not>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.36</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <!-- altimeter drum counter -->
    <animation>
        <type>textranslate</type>
        <object-name>drum-1</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.001</factor>
        <offset>-100</offset>
        <step>100</step>
        <scroll>10</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>


    <animation>
        <type>textranslate</type>
        <object-name>drum-2</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.0001</factor>
        <offset>-1000</offset>
        <step>1000</step>
        <scroll>25</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>


    <animation>
        <type>textranslate</type>
        <object-name>drum-3</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>instrumentation/altimeter/indicated-altitude-meter</property>
        <factor>0.00001</factor>
        <offset>-10000</offset>
        <step>10000</step>
        <scroll>25</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>negativ-flag</object-name>
        <condition>
            <less-than>
                <property>instrumentation/altimeter/indicated-altitude-meter</property>
                <value>0</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>below-1000-flag</object-name>
        <condition>
            <less-than>
                <property>instrumentation/altimeter/indicated-altitude-meter</property>
                <value>1000</value>
            </less-than>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>below-10000-flag</object-name>
        <condition>
            <less-than>
                <property>instrumentation/altimeter/indicated-altitude-meter</property>
                <value>10000</value>
            </less-than>
        </condition>
    </animation>

    <!-- barometer drum counter -->
    <animation>
        <type>textranslate</type>
        <object-name>drum-inhg-1</object-name>
        <property>instrumentation/altimeter/setting-inhg</property>
        <factor>10</factor>
        <offset>-0.01</offset>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>drum-inhg-2</object-name>
        <property>instrumentation/altimeter/setting-inhg</property>
        <factor>1</factor>
        <offset>-0.1</offset>
        <step>0.1</step>
        <scroll>0.01</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>drum-inhg-3</object-name>
        <property>instrumentation/altimeter/setting-inhg</property>
        <factor>0.1</factor>
        <offset>-1</offset>
        <step>1</step>
        <scroll>0.01</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>drum-inhg-4</object-name>
        <property>instrumentation/altimeter/setting-inhg</property>
        <factor>0.01</factor>
        <offset>-10</offset>
        <step>10</step>
        <scroll>0.01</scroll>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>standard-flag</object-name>
        <condition>
            <property>instrumentation/altimeter/setting-std</property>
        </condition>
    </animation>

    <!-- Altimeter Ingh Setting Knob -->
    <animation>
        <type>knob</type>
        <condition>
            <not><property>instrumentation/altimeter/setting-std</property></not>
        </condition>
        <object-name>knobPick</object-name>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-inhg</property>
                <factor>0.02</factor>
                <min>14.76</min> <!-- 500 hPa -->
                <max>33.38</max>  <!-- 1130 hPa -->
                <wrap>false</wrap>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>altimeter2-setting</tooltip-id>
                <label>Baro setting</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <condition>
            <not><property>/instrumentation/altimeter/setting-std</property></not>
        </condition>
        <object-name>knob</object-name>
        <property>/instrumentation/altimeter/setting-hpa</property>
        <factor>4</factor>
        <center>
          <x-m>0.0</x-m>
          <y-m>-0.03165</y-m>
          <z-m>-0.02881</z-m>
        </center>
        <axis>
          <x>-1</x>
          <y>0</y>
          <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>knob</object-name>
        <action>
            <name>STD pressure</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>/instrumentation/altimeter/setting-std</property>
            </binding>
            <binding>
                <condition>
                    <property>/instrumentation/altimeter/setting-std</property>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa-saved</property>
                <property>/instrumentation/altimeter/setting-hpa</property>
            </binding>
            <binding>
                <condition>
                    <property>/instrumentation/altimeter/setting-std</property>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <value>1013</value>
            </binding>
            <binding>
                <condition>
                    <not><property>/instrumentation/altimeter/setting-std</property></not>
                </condition>
                <command>property-assign</command>
                <property>/instrumentation/altimeter/setting-hpa</property>
                <property>/instrumentation/altimeter/setting-hpa-saved</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.click()</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>altimeter2-std</tooltip-id>
                <label>Toggle STD pressure</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>mount</object-name>
        <object-name>face</object-name>
        <object-name>drums</object-name>
        <object-name>needle-w</object-name>
        <hovered>
            <binding>
                <condition>
                    <property>ja37/elec/ac-bus-main-bool</property>
                </condition>
                <command>set-tooltip</command>
                <tooltip-id>altitude2</tooltip-id>
                <label>Altitude: %3d feet</label>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
            </binding>
        </hovered>
    </animation>


    <!-- lighting -->
    <animation>
        <!--<object-name>mount</object-name>-->
        <object-name>knob</object-name>
        <object-name>face</object-name>
        <object-name>drums</object-name>
        <object-name>needle-w</object-name>
        <object-name>off</object-name>
        <type>material</type>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>


</PropertyList>
