<?xml version="1.0"?>

<PropertyList>
    <path>chronometer.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
        <object-name>button</object-name>
        <object-name>knob</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>dial</object-name>
        <object-name>needleChronoS</object-name>
        <object-name>needleChronoM</object-name>
        <object-name>needleClockM</object-name>
        <object-name>needleClockH</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <object-name>needleChronoS</object-name>
        <object-name>needleChronoM</object-name>
        <object-name>needleClockM</object-name>
        <object-name>needleClockH</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>mount</object-name>
        <object-name>glass</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>chronometer</tooltip-id>
                <label>Time (UTC default): %s</label>
                <property>instrumentation/clock/indicated-string</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleClockH</object-name>
        <property>instrumentation/clock/indicated-sec</property>
        <factor>0.00833333333333333</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleClockM</object-name>
        <property>instrumentation/clock/indicated-sec</property>
        <factor>0.1</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleChronoM</object-name>
        <property>instrumentation/clock/elapsed-sec</property>
        <factor>0.1</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleChronoS</object-name>
        <property>instrumentation/clock/elapsed-sec</property>
        <factor>6</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knob</object-name>
        <property>instrumentation/clock/offset-sec</property>
        <factor>0.04</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>-0.0245</y-m>
            <z-m>-0.0245</z-m>
        </center>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/clock/offset-sec</property>
                <factor>60</factor>
           </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>clock-setting</tooltip-id>
                <label>Adjust time</label>
            </binding>
        </hovered>
    </animation>
    
    <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>ja37.chrono_click()</script>
            </binding>
            <binding>
                <command>nasal</command>
                <script>ja37.click()</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>chronometer-button</tooltip-id>
                <label>Chronometer start/stop/reset</label>
            </binding>
        </hovered>
    </animation>
</PropertyList>
