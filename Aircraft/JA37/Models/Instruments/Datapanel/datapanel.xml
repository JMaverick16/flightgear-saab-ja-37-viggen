	<animation>
		<type>rotate</type>
		<object-name>inOutSwitch</object-name>
		<property>ja37/navigation/inout</property>
		<factor>60</factor>
		<center>
			<x-m> -0.02012   </x-m>
			<y-m> 0.02769   </y-m>
			<z-m> 0.00464   </z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
        <type>material</type>
        <condition>
	       <equals>
	        <property>ja37/systems/variant</property>
	        <value>0</value>
	       </equals>
	     </condition>
        <object-name>mount</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>data-panel</texture-prop>
        <texture>datapanelenJA.png</texture>
    </animation>

    <animation>
        <type>select</type>
        <condition>
	       <equals>
	        <property>ja37/systems/variant</property>
	        <value>0</value>
	       </equals>
	     </condition>
        <object-name>DataCanvas</object-name>
    </animation>

    <animation>
        <type>select</type>
        <condition>
	       <greater-than>
	        <property>ja37/systems/variant</property>
	        <value>0</value>
	       </greater-than>
	     </condition>
        <object-name>1Data</object-name>
        <object-name>2Data</object-name>
        <object-name>3Data</object-name>
        <object-name>4Data</object-name>
        <object-name>5Data</object-name>
        <object-name>6Data</object-name>
        <object-name>7Data</object-name>
    </animation>
	
