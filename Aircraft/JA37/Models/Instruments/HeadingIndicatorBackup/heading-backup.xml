<?xml version="1.0"?>

<PropertyList>
    <path>heading-backup.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
        <object-name>buttonLeft</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-gauge</inherits-from>
        <object-name>dial</object-name>
        <object-name>needleHeading</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <object-name>needleHeading</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>glass</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>heading-backup</tooltip-id>
                <label>Magnetic heading: %3d</label>
                <property>/orientation/heading-magnetic-deg</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>buttonLeft</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>ja37.click();</script>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>instrumentation/heading-indicator[1]/fast-erect-button</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>instrumentation/heading-indicator[1]/fast-erect-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>headingBackupErect</tooltip-id>
                <label>Backup gyro fast-erect</label>
            </binding>
        </hovered>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>buttonLeft</object-name>
        <property>instrumentation/heading-indicator[1]/fast-erect-button</property>
        <factor>-0.002</factor>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleHeading</object-name>
        <property>instrumentation/heading-indicator[1]/indicated-heading-deg</property>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
</PropertyList>
