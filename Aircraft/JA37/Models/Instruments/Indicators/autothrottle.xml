<?xml version="1.0"?>

<PropertyList>
    <path>autothrottle.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>display</object-name>
    </effect>

    <animation>
      <type>material</type>
      <object-name>display</object-name>
      <condition><property>/ja37/effect/swedish-labels</property></condition>
      <texture>labels-se.png</texture>
    </animation>

    <animation>
        <type>material</type>
        <object-name>display</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>/instrumentation/at-indicator</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>display</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>AFK</tooltip-id>
                <label>Automatic throttle</label>
            </binding>
        </hovered>
    </animation>
</PropertyList>
