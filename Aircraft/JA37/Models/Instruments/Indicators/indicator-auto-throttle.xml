<?xml version="1.0"?>

<PropertyList>
    <path>indicator-auto-throttle.ac</path>

    <animation>
        <type>material</type>
        <object-name>display</object-name>
        <emission>
            <red-prop>autoflight/athr-pos</red-prop>
            <green-prop>autoflight/athr-pos</green-prop>
            <blue-prop>autoflight/athr-pos</blue-prop>
            <factor-prop>fdm/jsbsim/autoflight/athr</factor-prop>
        </emission>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>display</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>autothrottle-on</tooltip-id>
                <label>Auto Throttle Engaged</label>
            </binding>
        </hovered>
    </animation>


</PropertyList>
