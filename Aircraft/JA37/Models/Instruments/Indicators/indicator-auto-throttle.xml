<?xml version="1.0"?>

<PropertyList>
    <path>indicator-auto-throttle.ac</path>

    <animation>
        <type>material</type>
        <object-name>display</object-name>
        <emission>
            <red>1.0</red>
            <green>1.0</green>
            <blue>1.0</blue>
            <factor-prop>/instrumentation/at-indicator</factor-prop>
        </emission>
    </animation>


    <animation>
        <type>pick</type>
        <object-name>display</object-name>
        <object-name>mount</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>AFK</tooltip-id>
                <label>Automatic throttle</label>
            </binding>
        </hovered>
