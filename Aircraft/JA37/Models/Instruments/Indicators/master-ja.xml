<?xml version="1.0"?>

<PropertyList>
    <path>master-ja.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>button</object-name>
        <object-name>bolt1</object-name>
        <object-name>bolt2</object-name>
        <object-name>bolt3</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>button</object-name>
        <object-name>bolt1</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/master-warning-button</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/avionics/master-warning-button</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Master warning silence</tooltip-id>
                <label>Master warning silence</label>
                <property>/instrumentation/master-warning</property>
            </binding>
        </hovered>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>button</object-name>
       <property>ja37/avionics/master-warning-button</property>
       <factor>0.01</factor>
       <offset-m>0</offset-m>
       <axis>
         <x>-1</x>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>material</type>
        <object-name>lamp2</object-name>
        <emission>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>fdm/jsbsim/systems/indicators/master-warning/lamp1</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>lamp3</object-name>
        <emission>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>fdm/jsbsim/systems/indicators/master-warning/lamp2</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lamp2</object-name>
        <object-name>lamp3</object-name>
        <object-name>bolt2</object-name>
        <object-name>bolt3</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Master warn</tooltip-id>
                <label>Master warning</label>
            </binding>
        </hovered>
    </animation>


</PropertyList>
