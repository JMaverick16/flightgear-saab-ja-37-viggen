<?xml version="1.0"?>

<PropertyList>
    <path>snabbresn.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>shield</object-name>
        <object-name>bt</object-name>
        <object-name>label</object-name>
    </effect>

    <animation>
      <type>material</type>
      <object-name>label</object-name>
      <condition><property>/ja37/effect/swedish-labels</property></condition>
      <texture>labels-se.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>bt</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/init-done</property>
                <value>0</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/button-snabbresn</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/avionics/button-snabbresn</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>snabbresn</tooltip-id>
                <label>Quick INS Reinit</label>
            </binding>
        </hovered>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>bt</object-name>
       <property>ja37/avionics/button-snabbresn</property>
       <factor>0.005</factor>
       <offset-m>0</offset-m>
       <axis>
         <x>-1</x>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

</PropertyList>
