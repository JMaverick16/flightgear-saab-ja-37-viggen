        <object-name>handle2</object-name>
        <object-name>disc2</object-name>
        <object-name>screw2</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>panel</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>me799</tooltip-id>
                <label>Counter-measure panel</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handle1</object-name>
        <object-name>disc1</object-name>
        <object-name>screw1</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>cp</tooltip-id>
                <label>Chaff program</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handle2</object-name>
        <object-name>disc2</object-name>
        <object-name>screw2</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fp</tooltip-id>
                <label>Flare program</label>
            </binding>
        </hovered>
    </animation>
