<?xml version="1.0"?>

<!-- JA37 Viggen Autopilot -->
<!-- Retuned and Overhauled -->
<!-- (c) 2017 Joshua Davidson (it0uchpods) -->

<PropertyList>

 <!-- =============================================================== -->
 <!-- Lateral  Modes                                                  -->
 <!-- =============================================================== -->

	<filter>
		<name>WINGS LEVEL</name>
		<type>gain</type>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>wing-leveler</value>
				</equals>
				<property>ja37/avionics/temp-halt-ap-roll</property>
				<property>ja37/avionics/temp-halt-ap-roll2</property>
			</condition>
		</enable>
		<gain>0</gain>
		<input>0</input>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
	</filter>

	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/heading-bug-error-deg</input>
		<output>/autopilot/internal/heading-bug-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>

	<pi-simple-controller>
		<name>HEADING MAGNETIC</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>dg-heading-hold</value>
				</equals>
				<property>ja37/avionics/temp-halt-ap-roll</property>
				<property>ja37/avionics/temp-halt-ap-roll2</property>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/heading-bug-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.0</Kp>
			<Ki>0.0</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/true-heading-error-deg</input>
		<output>/autopilot/internal/true-heading-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>

	<pi-simple-controller>
		<name>HEADING TRUE</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>true-heading-hold</value>
				</equals>
				<property>ja37/avionics/temp-halt-ap-roll</property>
				<property>ja37/avionics/temp-halt-ap-roll2</property>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/true-heading-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.0</Kp>
			<Ki>0.0</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>
	
	<filter>
		<type>gain</type>
		<gain>1</gain>
		<input>/autopilot/internal/nav1-heading-error-deg</input>
		<output>/autopilot/internal/nav1-heading-error-deg-norm</output>
		<min>-30</min>
		<max>30</max>
	</filter>
	
	<pi-simple-controller>
		<name>NAV1 TRK</name>
		<debug>false</debug>
		<enable>
			<condition>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>nav1-hold</value>
				</equals>
				<property>ja37/avionics/temp-halt-ap-roll</property>
				<property>ja37/avionics/temp-halt-ap-roll2</property>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/nav1-heading-error-deg-norm</property>
		</input>
		<reference>
			<value>0.0</value>
		</reference>
		<output>
			<property>/autopilot/internal/target-roll-deg</property>
		</output>
		<config>
			<Kp>-4.5</Kp>
			<Ki>0.0001</Ki>
			<min>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
				<scale>-1</scale>
			</min>
			<max>
				<property>/fdm/jsbsim/autopilot/max-roll</property>
			</max>
		</config>
	</pi-simple-controller>

	<filter>
		<name>ROLL DEG SYNC</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<or>
					<and>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</not-equals>
						<not-equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</not-equals>
					</and>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>0</value>
					</equals>
				</or>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/autopilot/internal/target-roll-deg</output>
		<min>
			<property>/fdm/jsbsim/autopilot/max-roll</property>
			<scale>-1</scale>
		</min>
		<max>
			<property>/fdm/jsbsim/autopilot/max-roll</property>
		</max>
	</filter>

	<filter>
		<name>IT-CONTROLLER: TARGET ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<input>
			<property>/autopilot/internal/target-roll-deg</property>
		</input>
		<output>/autopilot/internal/target-roll</output>
		<type>noise-spike</type>
		<max-rate-of-change>8</max-rate-of-change>
	</filter>

	<filter>
		<name>System Command: Roll Rate</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-0.12</gain>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-deg</property>
		</input>
		<reference>
			<property>/autopilot/internal/target-roll</property>
		</reference>
		<output>
			<property>/autopilot/internal/roll-rate-cmd</property>
		</output>   	
		<min>-0.5</min>
		<max>0.5</max>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: ROLL RATE CMD</name>
		<type>gain</type>
		<gain>1</gain>
		<input>
			<expression>
				<table>
					<property>/autopilot/internal/roll-rate-cmd</property> 
					<entry><ind>-1</ind><dep>-20.0</dep></entry>
					<entry><ind> 0</ind><dep>  0.0</dep></entry>
					<entry><ind> 1</ind><dep> 20.0</dep></entry>
				</table>
			</expression>
		</input>
		<output>/autopilot/internal/roll-rate</output>
    </filter>
	
	<pid-controller>
		<name>IT-CONTROLLER: ROLL</name>
		<debug>false</debug>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/orientation/roll-rate-degps</property>
		</input>
		<reference>
			<property>/autopilot/internal/roll-rate</property>
		</reference>
		<output>
			<property>/autopilot/internal/aileron-cmd</property>
		</output>
		<config>
			<Kp>0.035</Kp>
			<beta>1</beta>
			<alpha>0.1</alpha>
			<gamma>0</gamma>
			<Ti>1.0</Ti>
			<Td>0.005</Td>
			<u_min>-1</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>IT-CONTROLLER: ROLL CMD</name>
		<debug>false</debug>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<and>
					<or>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>wing-leveler</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>dg-roll-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>true-heading-hold</value>
						</equals>
						<equals>
							<property>/autopilot/locks/heading</property>
							<value>nav1-hold</value>
						</equals>
					</or>
					<equals>
						<property>/ja37/avionics/autopilot</property>
						<value>1</value>
					</equals>
				</and>
			</condition>
		</enable>
		<input>
			<property>/autopilot/internal/aileron-cmd</property>
		</input>
		<output>/controls/flight/aileron-ap</output>
		<type>noise-spike</type>
		<max-rate-of-change>0.7</max-rate-of-change>
	</filter>

	<!-- Pitch -->

    <pid-controller>
        <name>Pitch hold</name>
        <debug>false</debug>
        <enable>
            <condition>
                <or>
                    <equals>
                        <property>/autopilot/locks/altitude</property>
                        <value>pitch-hold</value>
                    </equals>
                    <equals>
                        <property>/autopilot/locks/altitude</property>
                        <value>vertical-speed-hold</value>
                    </equals>
                </or>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/orientation/pitch-deg</property>
        </input>
        <reference>/autopilot/internal/target-pitch-deg</reference>
        <output>
            <property>/controls/flight/elevator-ap</property>
        </output>
        <config>
            <Kp>-1.0</Kp>
            <Ti>1.0</Ti>
            <Td>0.0</Td>
            <u_min>
                -1
            </u_min>
            <u_max>
                1
            </u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>Auto throttle</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/speed</property>
                    <value>speed-with-throttle</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
            </condition>
        </enable>
        <input>
            <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-speed-kt</property>
        </reference>
        <output>
            <property>/controls/engines/engine/throttle</property>
        </output>
        <config>
            <Kp>0.01</Kp>
            <!-- was 0.005 -->
            <beta>1.0</beta>
            <alpha>0.1</alpha>
            <Ti>25.0</Ti>
            <!-- was 10 -->
            <Td>0.5</Td>
            <u_min>0.15</u_min>
            <u_max><property>ja37/avionics/auto-throttle-max</property></u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>Auto throttle AoA</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/speed</property>
                    <value>constant-AoA</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
            </condition>
        </enable>
        <input>
            <property>/orientation/alpha-deg</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-aoa</property>
        </reference>
        <output>
            <property>/controls/engines/engine/throttle</property>
        </output>
        <config>
            <Kp>-0.009</Kp>
            <Ti>0.040</Ti>
            <Td>400.0</Td>
            <u_min>0.0</u_min>
            <u_max><property>ja37/avionics/auto-throttle-max</property></u_max>
        </config>
    </pid-controller>

    <filter>
        <name>AP:Pitch sample and hold</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>pitch-hold</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <type>gain</type>
        <gain>1.0</gain>
        <input>/autopilot/settings/target-pitch-deg</input>
        <output>/autopilot/internal/target-pitch-deg</output>
    </filter>

    <!-- rate of climb -->
    <pid-controller>
        <name>AP:Rate of climb</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>vertical-speed-hold</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/velocities/vertical-speed-fps</property>
        </input>
        <reference>
            <property>/autopilot/settings/vertical-speed-fpm</property>
            <scale>0.0166667</scale>
        </reference>
        <output>
            <property>/autopilot/internal/target-pitch-deg</property>
        </output>
        <config>
            <Kp>0.11</Kp>
            <Ti>1.0</Ti>
            <Td>0.0</Td>            <!-- derivator time -->
            <u_min>-30
                <!--<property>/autopilot/internal/min-elevator</property>-->
            </u_min>
            <u_max>60
                <!--<property>/autopilot/internal/max-elevator</property>-->
            </u_max>
        </config>
    </pid-controller>

    <!-- Simple angle of attack hold -->
    <pid-controller>
        <name>AOA hold</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>aoa-hold</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/orientation/alpha-deg</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-aoa-deg</property>
        </reference>
        <output>
            <property>/controls/flight/elevator-ap</property>
        </output>
        <config>
            <Kp>-0.05</Kp>
            <!-- proportional gain -->
            <beta>1.0</beta>
            <!-- input value weighing factor -->
            <alpha>0.1</alpha>
            <!-- low pass filter weighing factor -->
            <gamma>0.0</gamma>
            <!-- input value weighing factor for -->
            <!-- unfiltered derivative error -->
            <Ti>0.5</Ti>
            <!-- integrator time -->
            <Td>0.00001</Td>
            <!-- derivator time -->
            <u_min>
                -1
            </u_min>
            <u_max>
                1
            </u_max>
        </config>
    </pid-controller>

    <!-- Altitude hold.  2 stage cascade controller. -->

    <!-- Stage #1 sets target rate of climb based on diff between current alt -->
    <!-- and target altitude. -->
    <filter>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>altitude-hold</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <gain>0.1</gain>
        <input>
            <expression>
                <dif>
                    <property>/autopilot/settings/target-altitude-ft</property>
                    <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                </dif>
            </expression>
        </input>
        <output>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </output>
        <min><property>fdm/jsbsim/autopilot/descent</property></min>
        <max><property>fdm/jsbsim/autopilot/climb</property></max>
    </filter>

    <pi-simple-controller>
        <name>Altitude Hold (Altimeter based) Stage 1</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>altitude-holda</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/instrumentation/altimeter/indicated-altitude-ft</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-altitude-ft</property>
        </reference>
        <output>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </output>
        <config>
            <Kp>0.2</Kp>         <!-- proportional gain -->
            <Ki>0.01</Ki>        <!-- integral gain -->
            <u_min>
                <property>fdm/jsbsim/autopilot/descent</property>
            </u_min>
            <!-- minimum output clamp -->
            <u_max>
                <property>fdm/jsbsim/autopilot/climb</property>
            </u_max>
            <!-- maximum output clamp -->
        </config>
    </pi-simple-controller>

    <!-- Stage #2 drives the elevator to achieve the desired climb rate. -->
    <pid-controller>
        <name>Altitude Hold (Altimeter based) Stage 2</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>altitude-hold</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/velocities/vertical-speed-fps</property>
        </input>
        <reference>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </reference>
        <output>
            <property>/controls/flight/elevator-ap</property>
        </output>
        <config>
            <Kp>-0.01</Kp>    <!-- proportional gain -->
            <Ti>10</Ti>     <!-- integrator time -->
            <Td>0.0001</Td>    <!-- derivator time -->
            <u_min>
                -0.75
            </u_min>
            <u_max>
                 0.75
            </u_max>
        </config>
    </pid-controller>


    <!-- agl hold.  2 stage cascade controller. -->

    <!-- Stage #1 sets target rate of climb based on diff between current alt -->
    <!-- and target altitude. -->
    <pi-simple-controller>
        <name>agl Hold (Altimeter based) Stage 1</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>agl-holda</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/position/altitude-agl-ft</property>
        </input>
        <reference>
            <property>/autopilot/settings/target-agl-ft</property>
        </reference>
        <output>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </output>
        <config>
            <Kp>0.2</Kp>
            <!-- proportional gain -->
            <Ki>0.01</Ki>
            <!-- integral gain -->
            <u_min>-75.0</u_min>
            <!-- minimum output clamp -->
            <u_max>50.0</u_max>
            <!-- maximum output clamp -->
        </config>
    </pi-simple-controller>

    <filter>
        <type>gain</type>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>agl-hold</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <gain>0.1</gain>
        <input>
            <expression>
                <dif>
                    <property>/autopilot/settings/target-agl-ft</property>
                    <property>/position/altitude-agl-ft</property>
                </dif>
            </expression>
        </input>
        <output>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </output>
        <min><property>fdm/jsbsim/autopilot/descent</property></min>
        <max><property>fdm/jsbsim/autopilot/climb</property></max>
    </filter>

    <!-- Stage #2 drives the elevator to achieve the desired climb rate. -->
    <pid-controller>
        <name>agl Hold (Altimeter based) Stage 2</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>agl-hold</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/velocities/vertical-speed-fps</property>
        </input>
        <reference>
            <property>/autopilot/internal/target-climb-rate-fps</property>
        </reference>
        <output>
            <property>/controls/flight/elevator-ap</property>
        </output>
        <config>
            <Kp>-0.01</Kp>    <!-- proportional gain -->
            <Ti>10</Ti>     <!-- integrator time -->
            <Td>0.0001</Td>    <!-- derivator time -->
            <u_min>
                -0.75
            </u_min>
            <u_max>
                0.75
            </u_max>
        </config>
    </pid-controller>

    <pid-controller>
        <name>glideslope Hold</name>
        <debug>false</debug>
        <enable>
            <condition>
                <equals>
                    <property>/autopilot/locks/altitude</property>
                    <value>gs1-hold</value>
                </equals>
                <equals>
                    <property>/ja37/avionics/autopilot</property>
                    <value>1</value>
                </equals>
                <property>ja37/avionics/temp-halt-ap-pitch</property>
            </condition>
        </enable>
        <input>
            <property>/velocities/vertical-speed-fps</property>
        </input>
        <reference>
            <property>instrumentation/nav[0]/gs-rate-of-climb</property>
        </reference>
        <output>
            <property>/controls/flight/elevator-ap</property>
        </output>
        <config>
            <Kp>-0.01</Kp>    <!-- proportional gain -->
            <Ti>10</Ti>     <!-- integrator time -->
            <Td>0.0001</Td>    <!-- derivator time -->
            <u_min>
                -0.75
            </u_min>
            <u_max>
                0.75
            </u_max>
        </config>
    </pid-controller>

</PropertyList>
