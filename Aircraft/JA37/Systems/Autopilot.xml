<?xml version="1.0"?>

<PropertyList>

 <!-- =============================================================== -->
 <!-- Velocity Modes                                                  -->
 <!-- =============================================================== -->

	<pid-controller>
		<name>Auto throttle</name>
		<debug>false</debug>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/locks/speed</property>
						<value>speed-with-throttle</value>
					</equals>
					<equals>
						<property>/autopilot/locks/speed</property>
						<value>constant-AoA</value>
					</equals>
				</or>
				<equals>
					<property>/ja37/avionics/autopilot</property>
					<value>1</value>
				</equals>
			</condition>
		</enable>
		<input>
			<property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
		</input>
		<reference>speed</reference>
		<output>
			<property>/controls/engines/engine/throttle</property>
		</output>
		<config>
			<Kp>0.05</Kp>
			<beta>1.0</beta>
			<alpha>0.1</alpha>
			<gamma>0.0</gamma>
			<Ti>10.0</Ti>
			<Td>0.00001</Td>
			<u_min>0</u_min>
			<u_max>1</u_max>
		</config>
	</pid-controller>

</PropertyList>
