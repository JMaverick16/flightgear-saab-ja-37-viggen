<?xml version="1.0"?>

<PropertyList>
    <title>Before Taxi</title>
    <item>
        <name>Control surfaces</name>
        <value>CHECK MOVEMENT</value>
    </item>
    <item>
        <name>Pitch trim</name>
        <value>CHECK BETWEEN -3/0</value>
        <condition>
            <and>
                <greater-than-equals>
                    <property>/controls/flight/elevator-trim</property>
                    <value>-0.3</value>
                </greater-than-equals>
                <less-than-equals>
                    <property>/controls/flight/elevator-trim</property>
                    <value>0</value>
                </less-than-equals>
            </and>
        </condition>
        <binding>
            <command>property-assign</command>n
            <property>/controls/flight/elevator-trim</property>
            <value>0</value>
        </binding>
    </item>
    <item>
        <name>Set HUD Units</name>
        <value>Metric or Imperial (Shift-I)</value>
        <marker>
            <x-m>-4.0347</x-m>
            <y-m>0.1174</y-m>
            <z-m>0.4405</z-m>
            <scale>3.0000</scale>
        </marker>
    </item>
    <item>
        <name>Calibrate altimeters</name>
        <value>SET</value>
        <marker>
            <x-m>-3.9901</x-m>
            <y-m>0.1200</y-m>
            <z-m>0.3250</z-m>
            <scale>3.0000</scale>
        </marker>
        <condition>
            <equals>
                <property>ja37/avionics/altimeters-calibrated</property>
                <value>1</value>
            </equals>
        </condition>
        <binding>
            <command>nasal</command>
            <script>
              setprop("/instrumentation/altimeter/setting-inhg",
                      getprop("/environment/pressure-inhg"));
            </script>
        </binding>
    </item>
    <item>
        <name>Master caution</name>
        <value>CHECK OFF</value>
        <marker>
            <x-m>-4.0446</x-m>
            <y-m>-0.1450</y-m>
            <z-m>0.4600</z-m>
            <scale>1.0000</scale>
        </marker>
        <condition>
            <equals>
                <property>fdm/jsbsim/systems/indicators/master-warning/warning</property>
                <value>0</value>
            </equals>
        </condition>
    </item>
    <item>
        <name>Nose wheel steering</name>
        <value>ON (M)</value>
        <marker>
            <x-m>-3.5397</x-m>
            <y-m>-0.4141</y-m>
            <z-m>0.0496</z-m>
            <scale>1.8595</scale>
        </marker>
        <condition>
            <equals>
                <property>fdm/jsbsim/gear/unit[0]/nose-wheel-steering/enable</property>
                <value>1</value>
            </equals>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>fdm/jsbsim/gear/unit[0]/nose-wheel-steering/enable</property>
            <value>1</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>ja37.click();</script>
        </binding>
    </item>
    <item>
        <name>Transponder</name>
        <value>CODE SET</value>
        <marker>
            <x-m>-3.4174</x-m>
            <y-m>0.32</y-m>
            <z-m>-0.0099</z-m>
            <scale>3.0000</scale>
        </marker>
    </item>
    <item>
        <name>Transponder</name>
        <value>OFF</value>
        <condition>
            <equals>
                <property>/instrumentation/transponder/inputs/knob-mode</property>
                <value>0</value>
            </equals>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/instrumentation/transponder/inputs/knob-mode</property>
            <value>0</value>
        </binding>
        <marker>
            <x-m>-3.4174</x-m>
            <y-m>0.2893</y-m>
            <z-m>-0.0099</z-m>
            <scale>1.0000</scale>
        </marker>
    </item>
</PropertyList>
