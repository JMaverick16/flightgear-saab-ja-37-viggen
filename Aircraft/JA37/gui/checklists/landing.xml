<?xml version="1.0"?>

<PropertyList>
    <title>Land</title>
    <item>
        <name>Landing speed</name>
        <value>195-249 Km/h</value>
        <condition>
            <and>
                <greater-than>
                    <property>/velocities/airspeed-kt</property>
                    <value>105</value>
                </greater-than>
                <less-than>
                    <property>/velocities/airspeed-kt</property>
                    <value>134</value>
                </less-than>
            </and>
        </condition>
    </item>
    <item>
        <name>Gear</name>
        <value>DOWN (G)</value>
        <marker>
            <x-m>-3.0777</x-m>
            <y-m>-0.3537</y-m>
            <z-m>-0.0413</z-m>
            <scale>5.7603</scale>
        </marker>
        <condition>
            <property>controls/gear/gear-down</property>
        </condition>
        <binding>
            <command>nasal</command>
            <script>controls.gearDown(1);</script>
        </binding>
    </item>
    <item>
        <name>Angle of attack</name>
        <value>Up to 16.5 degrees</value>
    </item>
    <item>
        <name>Touchdown</name>
        <value>LAND</value>
        <condition>
            <property>gear/gear/wow</property>
        </condition>
    </item>
    <item>
        <name>Thrust</name>
        <value>REVERSE</value>
        <marker>
            <x-m>-3.9481</x-m>
            <y-m>-0.3048</y-m>
            <z-m>0.2715</z-m>
            <scale>5.0000</scale>
        </marker>
        <condition>
            <property>engines/engine/is-reversed</property>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine[0]/reverser-cmd</property>
            <value>1</value>
        </binding>
        <binding>
            <command>nasal</command>
            <script>ja37.click();</script>
        </binding>
    </item>
    <item>
        <name>Throttle</name>
        <value>INCREASE AS REQUIRED</value>
        <marker>
            <x-m>-3.6000</x-m>
            <y-m>-0.4587</y-m>
            <z-m>0.0959</z-m>
            <scale>7.0000</scale>
        </marker>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine[0]/throttle</property>
            <value>0.5</value>
        </binding>
    </item>
    <item>
        <name>Brake</name>
        <value>ON (B)</value>
    </item>
    <item>
        <name>At low speed</name>
        <value>&lt; 120 Km/h</value>
        <condition>
            <less-than>
                <property>/instrumentation/airspeed-indicator/indicated-speed-kt</property>
                <value>64.8</value>
            </less-than>
        </condition>
    </item>
    <item>
        <name>Reduce throttle to avoid engine fire</name>
        <value>REDUCE</value>
        <marker>
            <x-m>-3.6000</x-m>
            <y-m>-0.4587</y-m>
            <z-m>0.0959</z-m>
            <scale>7.0000</scale>
        </marker>
        <condition>
            <less-than>
                <property>/fdm/jsbsim/fcs/throttle-pos-deg</property>
                <value>40</value>
            </less-than>
        </condition>
        <binding>
            <command>property-assign</command>
            <property>/controls/engines/engine[0]/throttle</property>
            <value>0</value>
        </binding>
    </item>
</PropertyList>
